# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Database Configuration
DATABASE_URL=sqlite:///./bot_data.db

# Logging Configuration
LOG_LEVEL=INFO

# Data Retention (hours)
MESSAGE_RETENTION_HOURS=48

# Claude API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Admin Configuration
# Admin user ID for command access (use @userinfobot to get your ID)
# IMPORTANT: Keep this value private! Do not commit your actual ID to git.
ADMIN_USER_ID=0

# Admin chat ID to receive critical failure alerts
# Leave as 0 to disable admin notifications
ADMIN_CHAT_ID=0

# Environment Configuration
# Set to 'production' on Render, 'development' locally
ENVIRONMENT=production

# Webhook Configuration (for production deployment)
# Set to 'true' to use webhook mode (recommended for production)
# Set to 'false' to use long polling mode (for local development)
WEBHOOK_ENABLED=false

# Webhook URL (only used when WEBHOOK_ENABLED=true)
# Example: https://your-app.onrender.com/webhook
WEBHOOK_URL=https://telegram-imf-bot.onrender.com/webhook

# Webhook secret token (only used when WEBHOOK_ENABLED=true)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(48))"
# IMPORTANT: Keep this value private! Do not commit your actual token to git.
WEBHOOK_SECRET_TOKEN=your_webhook_secret_token_here

# Webhook server port (only used when WEBHOOK_ENABLED=true)
WEBHOOK_PORT=8080
